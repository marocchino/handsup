<h2>Show event</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @event.name %>
  </li>

  <li>
    <strong>Group:</strong>
    <%= @event.group_id %>
  </li>

</ul>

<h3>Chat</h3>
<div id="chat" data-event-id="<%= @event.id %>"></div>
<input type="text" id="message" placeholder="type something"/>
<input type="submit" id="submit"/>

<%= link "Edit", to: event_path(@conn, :edit, @event) %>
<%= link "Back", to: event_path(@conn, :index) %>
